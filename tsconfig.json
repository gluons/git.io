{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES6",
		"outDir": "dist",
		"lib": ["ESNext", "DOM"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": true,
		"sourceMap": true,
		"types": ["@nuxt/types", "@nuxtjs/axios"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"]
		}
	},
	"exclude": ["node_modules"]
}
